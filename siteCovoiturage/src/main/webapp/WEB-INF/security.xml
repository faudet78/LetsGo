<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<security:http auto-config="true" use-expressions="true">
		<security:form-login login-page="/annonces/login"
			authentication-failure-url="/annonces/login?authfailed"
			default-target-url="/annonces" />
		<security:logout logout-success-url="/annonces"
			logout-url="/logout" />
		<security:access-denied-handler
			error-page="/annonces/403page" />
		<security:intercept-url pattern="/annonces/posterAnnonce**"
			access="hasRole('ROLE_ADMIN')" />
		<!-- <security:intercept-url pattern="/login*" access="hasRole('ROLE_ADMIN')" 
			/> -->
	</security:http>
	<security:authentication-manager>
		<security:authentication-provider>
			<!-- <security:user-service> <security:user name="azeredudu" password="christophe" 
				authorities="ROLE_ADMIN" /> </security:user-service> -->
			<security:jdbc-user-service
				data-source-ref="dataSource"
				authorities-by-username-query="select user.username, role.name from user
	
										   join user_role on user.id = user_role.users_id
	
										   join role on user_role.roles_id = role.id

											   where user.username = ?"
				users-by-username-query="select username,password,active from user where username = ?" />
			<!-- <security:password-encoder hash="bcrypt"> </security:password-encoder> -->
		</security:authentication-provider>
	</security:authentication-manager>
	<security:global-method-security
		pre-post-annotations="enabled"></security:global-method-security>
</beans>